@page
@model GrifindoToys.Pages.AddEmployeeModel
@{
}

<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input class="form-control" id="FirstName" name="FirstName" type="text" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input class="form-control" id="LastName" name="LastName" type="text" required />
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        <input class="form-control" id="Age" name="Age" type="number" min="18" max="70" required />
    </div>
    <div class="form-group">
        <label for="MonthlySalary">Monthly Salary</label>
        <input class="form-control" id="MonthlySalary" name="MonthlySalary" type="number" min="0" required />
    </div>
    <div class="form-group">
        <label for="OTPerHour">OT per Hour</label>
        <input class="form-control" id="OTPerHour" name="OTPerHour" type="number"  min="0"  required />
    </div>
    <div class="form-group">
        <label for="Allowances">Allowances</label>
        <input class="form-control" id="Allowances" name="Allowances" type="number" min="0" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
